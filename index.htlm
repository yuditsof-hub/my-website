        @keyframes glow {
            0%, 100% { text-shadow: 0 0 30px rgba(255, 68, 68, 0.8); }
            50% { text-shadow: 0 0 50px rgba(255, 68, 68, 1); }
        }

        .subtitle {
            font-size: clamp(22px, 4vw, 30px);
            margin-bottom: 40px;
            color: #ccc;
            font-weight: 500;
        }

        .urgency-box {
            background: linear-gradient(135deg, #ff0000 0%, #990000 100%);
            color: white;
            padding: 40px;
            border-radius: 25px;
            margin: 50px auto;
            max-width: 800px;
            box-shadow: 0 25px 70px rgba(255, 0, 0, 0.7);
            border: 3px solid #ff4444;
            animation: pulse 2s infinite;
        }

        @keyframes pulse {
